					%a{:href => "http://feed.is/", :target=> "_blank"}#FEED

				%a{:href => "http://itunes.apple.com/app/now./id525956360", :target => "_blank"}
					#appstore{:style => "margin-left:10px; margin-top:35px"}
						= image_tag "https://d3422saexnbpnl.cloudfront.net/static/images/appstorebadge2x.png", :width => "200px"
			- else
				%p.question Please click all the links below.  When you've clicked them all, you'll get your completion code
				- @links.each do |link_url|
					%p.question
						-if @new_tab
							%a{:href => link_url, :target=> "_blank"}
								= link_url
						-else
							%a{:href => link_url}
								= link_url



