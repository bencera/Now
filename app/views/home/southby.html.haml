#wrapper
	.left{:style => "margin-top:15px"}
		=image_tag "http://s3.amazonaws.com/now_assets/iphone_web_3.png", :width => "350px", :id => "iphone"
		

	.right
		#content
			=image_tag "logo_landing.png", :width => "260px"
			- if !@show_links
				%p.tagline#target{:style => "font-size:bold"} 
					= "Dear #{@name},"
				%p.question I see you love Google Analytics! So do we. :)
				%p.question Download Now for SxSW: </br>- See how the coolest events are before going <br/>- Check if your Instagram friends are there
				%p.question
					= "- "
