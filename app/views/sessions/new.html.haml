.container
  .content_below#main_title
    = link_to (image_tag 'ubimachine_btn.png'),  'https://api.instagram.com/oauth/authorize/?client_id=6c3d78eecf06493499641eb99056d175&redirect_uri=http://www.ubimachine.com/auth/instagram/callback&response_type=code&scope=likes+comments+relationships'

    %h1 or
    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}"
    = form_tag sessions_path do
      = text_field_tag :email,  nil, :placeholder => "Email", :class => 'xlarge', :id => "xlInput"
      %br
      %br
      %br
      = password_field_tag :password,  nil, :placeholder => "Password", :class => 'xlarge', :id => "xlInput"
      %br
      %br
      = submit_tag "Login", :class => 'btn large signup'
    