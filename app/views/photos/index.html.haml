.container
  .content_below#main
    - if params[:id].nil?
      %h1= "My feed"    
    -elsif params[:id] == "food"
      %h1= "New York" + " - " + "Restaurants"
    -elsif params[:id] == "nightlife"
      %h1= "New York" + " - " + "Nightlife"
    -elsif params[:id] == "entertainment"
      %h1= "New York" + " - " + "Arts & Entertainment"
    -elsif params[:id] == "outdoors"
      %h1= "New York" + " - " + "Outdoors"
      
    %ul.media-grid
      - @photos[0..19].each do |photo_id|
        - photo = Photo.first(conditions: {_id: photo_id.to_s})
        = render 'partials/showphoto', :photo => photo
        
  .content_below#right
    %h3 Trending venues
    %ul
      %li venue 1
      %li venue 2
      %li venue 3
      %li venue 4
  - if ig_logged_in
    .content_below#right
      %h3 Recommended venues
      %ul.unstyled
        %li Max Fish
        %a.follow
          = form_tag follows_path, :method => :post do
            = hidden_field_tag :id, nil
            = submit_tag "follow", :class => 'btn primary'
        
%footer
  = render 'partials/footer'