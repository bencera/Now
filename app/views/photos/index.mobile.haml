.container
  .content_below
    - if params[:id].nil?
      %h1#feed= "My feed"    
    -elsif params[:id] == "food"
      %h1#feed= "New York" + " - " + "Restaurants"
    -elsif params[:id] == "nightlife"
      %h1#feed= "New York" + " - " + "Nightlife"
    -elsif params[:id] == "entertainment"
      %h1#feed= "New York" + " - " + "Arts & Entertainment"
    -elsif params[:id] == "outdoors"
      %h1#feed= "New York" + " - " + "Outdoors"
    -elsif params[:id] == "trending"
      %h1#feed= "New York" + " - " + "Trending"
    -elsif params[:id] == "answered"
      %h1#feed= "New York" + " - " + "Answered"

    - @photos[0..9].each do |photo_id|
      %a#photo_wrapper.clearfix{:href => "photos/#{photo_id.to_s}"}
        - photo = Photo.first(conditions: {_id: photo_id.to_s})
        = render 'partials/showphoto', :photo => photo
    - unless @photos.count < 10
      .bouton
        = form_tag photos_url, :method => :get do
          - if params[:page].nil?
            = hidden_field_tag :page, 2
          - else
            = hidden_field_tag :page, (params[:page].to_i + 1)
          = hidden_field_tag :id, params[:id]
          = submit_tag "more", :class => 'btn'
        
%footer
  = render 'partials/footer'