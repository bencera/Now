.card
  #trending{:style => "font-size: 14px;"}
    .infos.clearfix{:style => "float: none;"}
      - @trending_venues.each do |venue|
        %h1.venue_name= Venue.find(venue[0]).name
        %p= "(#{venue[1]}+ people)" 
        %br
#results
  = render :partial => 'partials/card', :collection => @photos, :as => :photo
  = pageless @photos.total_pages, "/disrupt?lat=#{params[:lat]}&lng=#{params[:lng]}&range=#{params[:range]}"
  
#more{:style => "font-size: 14px; text-align: center; margin-bottom: 10px;"}
  - if params[:range] == "walking"
    %a{:onclick => "parent.location='/disrupt?lat=#{params[:lat]}&lng=#{params[:lng]}&range=cab'"} a cheap cab ride away
  - elsif params[:range] == "cab"
    %a{:onclick => "parent.location='/disrupt?lat=#{params[:lat]}&lng=#{params[:lng]}&range=subway'"} a subway ride away
  - elsif params[:range] == "subway"
    %a{:onclick => "parent.location='/disrupt?lat=#{params[:lat]}&lng=#{params[:lng]}&range=city'"} the whole city is your playground