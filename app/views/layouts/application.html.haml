!!! Strict
%html
%head
  %title= "ubimachine"
  = javascript_include_tag  "application"
  = stylesheet_link_tag "application"

%body
.topbar
  .topbar-inner
    .container
      %a.brand{:href=>"/photos"} ubimachine
      - if ig_logged_in
        %ul.nav
          %li
            = form_tag searches_url, :method => 'get', :id => 'search_form', :class => 'search' do
              = text_field_tag :term, params[:term], :class => "auto_search_complete", :placeholder => 'Search for a venue...'
          %li.dropdown{ :'data-dropdown' => "dropdown"}
            %a.dropdown-toggle New York
            %ul.dropdown-menu
              %li
                %a New York
          %li.dropdown{ :'data-dropdown' => "dropdown"}
            %a.dropdown-toggle
              - if params[:id].nil?
                My feed
              - elsif params[:id] == "food"
                Restaurants
              - elsif params[:id] == "nightlife"
                Nightlife
              - elsif params[:id] == "entertainment"
                Arts & Entertainment
              - elsif params[:id] == "outdoors"
                Outdoors
                
            %ul.dropdown-menu
              %li
                %a{:href=>"/photos"} My feed
              %li
                %a{:href=>"/photos?id=food"} Restaurants
              %li
                %a{:href=>"/photos?id=nightlife"} Nightlife
              %li
                %a{:href=>"/photos?id=entertainment"} Arts & Entertainment
              %li
                %a{:href=>"/photos?id=outdoors"} Outdoors
        %ul.nav.secondary-nav
          %li
            %a{:href=>"/inbox"} Inbox
          %li.dropdown{ :'data-dropdown' => "dropdown"}
            %a.dropdown-toggle
              - unless current_user.ig_details[1].blank?
                .profilepic
                  = image_tag current_user.ig_details[1], :width => '25px'
              - if current_user.ig_details[0].blank?
                - current_user.ig_username
              - else
                = current_user.ig_details[0]
            %ul.dropdown-menu
              %li
                %a{:href=>"/settings"} Settings
              %li.divider
              %li
                %a{:href=>'/logout'} Log out
      - else
        %ul.nav
          %li
            = form_tag searches_url, :method => 'get', :id => 'search_form', :class => 'search' do
              = text_field_tag :term, params[:term], :class => "auto_search_complete", :placeholder => 'Search for a venue...'
          %li.dropdown{ :'data-dropdown' => "dropdown"}
            %a.dropdown-toggle New York
            %ul.dropdown-menu
              %li
                %a New York
          %li.dropdown{ :'data-dropdown' => "dropdown"}
            %a.dropdown-toggle
              - if params[:id] == "food"
                Restaurants
              - elsif params[:id] == "nightlife"
                Nightlife
              - elsif params[:id] == "entertainment"
                Arts & Entertainment
              - elsif params[:id] == "outdoors"
                Outdoors
                
            %ul.dropdown-menu
              %li
                %a{:href=>"/photos?id=food"} Restaurants
              %li
                %a{:href=>"/photos?id=nightlife"} Nightlife
              %li
                %a{:href=>"/photos?id=entertainment"} Arts & Entertainment
              %li
                %a{:href=>"/photos?id=outdoors"} Outdoors
        %ul.nav.secondary-nav
          %li
            %a{:href=>'https://api.instagram.com/oauth/authorize/?client_id=6c3d78eecf06493499641eb99056d175&redirect_uri=' + root_url + 'auth/instagram/callback&response_type=code&scope=likes+comments+relationships'} Log in
%iframe{:frameborder => "0", :height => "0", :width => "0", :name => "iframe"}
- unless alert.nil?
  .alert-message.success.fade.in{:'data-alert' => "alert"}
    %a.close
      x
    %p=alert

= yield
