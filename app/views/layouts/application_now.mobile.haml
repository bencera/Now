!!! Strict
%html
%head
	%title= "Now - #{@event.description}"
	= csrf_meta_tag
	%meta{:name => "viewport", :content => "width=device-width; initial-scale=1.0; maximum-scale=1.0; minimum-scale=1.0; user-scalable=0;"}
	%meta{:name => "apple-mobile-web-app-capable", :content =>"yes"}
	%meta{:name => "apple-mobile-web-app-status-bar-style", :content=>"black"}
	= stylesheet_link_tag "mobile/mobile_now.css"
	%meta{:property=>"og:title", :content=>@event.description}
	%meta{:property=>"og:description", :content=>"at #{@venue.name} in #{@city}"}
	%meta{:property=>"fb:app_id", :content=>"174358702691912"}
	%meta{:property=>"og:type", :content=>"activity"}
	%meta{:property=>"og:url", :content=>"http://www.getnowapp.com/#{@event.shortid}"}
	%meta{:property=>"og:image", :content=>@photos.all[rand(@photos.count)].url[0]}
	%meta{:property=>"og:site_name", :content=>"Now"}
	%meta{:property=>"fb:admins", :content=>"571905313"}

%body
	#fb-root
	:javascript
		(function(d, s, id) {
		var js, fjs = d.getElementsByTagName(s)[0];
		if (d.getElementById(id)) return;
		js = d.createElement(s); js.id = id;
		js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=174358702691912";
		fjs.parentNode.insertBefore(js, fjs);
		}(document, 'script', 'facebook-jssdk'));
	= yield