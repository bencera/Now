      var image = "http://s3.amazonaws.com/now_assets/#{@category}_web.png";
      var marker = new google.maps.Marker({
            position: myLatlng,
            title:"#{@venue.name}",
            icon: image,
            map: map
            });
            marker.setMap(map);

